@model FleaMarket.FrontEnd.Models.ItemsIndexViewModel
@{
    ViewData["Title"] = "My Items";
}

<h1>My Items</h1>
<p class="lead">Manage your listings below. Edit details, mark items sold, or archive old posts.</p>

<form method="get" class="row g-3 mb-3">
    <div class="col-auto">
        <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Search" />
    </div>
    <div class="col-auto form-check">
        <input class="form-check-input" type="checkbox" id="showArchived" name="showArchived" value="true" @(Model.ShowArchived ? "checked" : "") />
        <label class="form-check-label" for="showArchived">Show archived</label>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Filter</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Deadline</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items)
{
        <tr>
            <td>
                @if (item.Images.Any())
                {
                    <img src="/uploads/@item.Images.First().FileName" alt="@item.Name" style="max-width:80px;" />
                }
            </td>
            <td>
                <a asp-controller="Items" asp-action="Details" asp-route-id="@item.Id">
                    @item.Name
                </a>
            </td>
            <td>@item.Description</td>
            <td>@(item.Price == null ? "Free" : item.Price?.ToString("C"))</td>
            <td>@item.Deadline?.ToString("g")</td>
            <td>@(item.IsSold ? "Sold" : item.IsReserved ? "Reserved" : "Available")</td>
            <td>
                <div class="btn-group" role="group" aria-label="Item actions">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    @if (!item.IsSold)
                    {
                        <form asp-action="MarkSold" asp-route-id="@item.Id" method="post" style="display: contents;">
                            <button type="submit" class="btn btn-sm btn-success">
                                <i class="fas fa-check"></i> Mark Sold
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="MarkAvailable" asp-route-id="@item.Id" method="post" style="display: contents;">
                            <button type="submit" class="btn btn-sm btn-success">
                                <i class="fas fa-undo"></i> Mark Available
                            </button>
                        </form>
                    }
                    <form asp-action="Archive" asp-route-id="@item.Id" method="post" style="display: contents;">
                            <button type="submit" class="btn btn-sm btn-warning">
                            <i class="fas fa-archive"></i> Archive
                        </button>
                    </form>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display: contents;" onsubmit="return confirm('Delete this item?');">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
